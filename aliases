# Unix
alias ..='cd ..'
alias ...='cd ../..'
alias e=$EDITOR
alias l='ls'
alias ll='ls -Alh'
alias mkdir='mkdir -p'
alias o='open .'

# Folders
alias desktop='cd ~/Desktop'
alias dotfiles='cd ~/.dotfiles'
alias dropbox='cd ~/Dropbox'
alias home='cd ~'

# Show/hide hidden files
alias showhidden='defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder'
alias hidehidden='defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder'

# Bundler
alias b=bundle

# Docker
alias docker-init='source /Applications/Docker/Docker\ Quickstart\ Terminal.app/Contents/Resources/Scripts/start.sh'
alias docker-rma='docker rm $(docker ps -a -q)'
alias docker-rmia='docker rmi $(docker images -q)'

# Include local aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
